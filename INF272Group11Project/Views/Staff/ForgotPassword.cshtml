@model INF272Group11Project.Models.Staff
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link rel="stylesheet" href="~/Content/INF272Project.css" type="text/css" />

    
</head>
<body>
    <img id="Logo" src="~/kisscc0-voting-computer-icons-election-logo-button-vote-icon-5b72245f890da6.8607747415342070715614.png" alt="Logo" />
    <h1 class="PageHeading">Voting Made Easy!</h1>
    <label class="Slogan">The simple and better way to vote</label>
    <br />
    <h1 class="SecondaryHead">Please Enter A New Password!</h1>
    <h1 class="SecondaryHead" style="color: red">@ViewBag.message</h1>
    <h1 class="SecondaryHead" style="color: green">@ViewBag.success</h1>
    <div class="Container">
        @using (Html.BeginForm("doForgotPasswordUpdate", "Staff", FormMethod.Post))
        {
            <input type="hidden" value="@ViewBag.Username" name="username" />
            <br />
            <br />
            <label>@ViewBag.answer</label>
            <input id="txtAnswer" type="text" name="Answer" />
            <br />
            <br />
            <label>New Password: </label>
            <input id="txtPassword" type="password" name="NewPassword" />
            <br />
            <br />
            <label>Confirm New Password: </label>
            <input id="txtConfirmPassword" type="password" name="ConfirmNewPassword" />
            <br />
            <br />
            <input id="BtnChangePassword" type="submit" value="Change Password" />
        }
        <br />
        <br />
        @using (Html.BeginForm("StaffLogin", "Staff"))
        {
            <input id="BtnCancel" type="submit" value="Cancel" />
        }
    </div>
</body>
</html>
