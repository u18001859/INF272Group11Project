
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpateParty</title>
    <link rel="stylesheet" type="text/css" href="~/Content/INF272Project.css" />
</head>
<body>
    <img id="Logo" src="~/kisscc0-voting-computer-icons-election-logo-button-vote-icon-5b72245f890da6.8607747415342070715614.png" alt="Logo" />
    <h1 class="PageHeading">Voting Made Easy!</h1>
    <label class="Slogan">The simple and better way to vote</label>
    <br />
    <ul class="NavigationBar">
        <li class="BarList"><a class="OnPage" href="@Url.Action("StaffHomePage","Staff")">Home</a></li>
        <li class="BarList"><a href="@Url.Action("UpdateStaffInfo", "Staff")">Update Personal Info</a></li>
        <li class="BarList"><a href="@Url.Action("ChangePasswordStaff", "Staff")">Change Password</a></li>
        <li class="BarList"><a href="@Url.Action("Index", "Report")">Create a Report</a></li>
        <li class="BarList"><a href="@Url.Action("TotalVotes","Candidate")">Total Votes</a></li>
        <li class="BarList"><a href="@Url.Action("StaffHomePage","Staff")">National Results</a></li>
        <li class="BarList"><a href="@Url.Action("StaffHomePage","Staff")">Provincial Results</a></li>
        <li class="BarList"><a href="@Url.Action("Logout", "Voter")">Logout</a></li>
    </ul>
    <h1 class="Container">Please Replace the Party Data</h1>
    <div class="Container">
        @using (Html.BeginForm("UpdatePartyImages","Staff"))
        {
        <br />
        <label>Party Name: </label>
        <input id="txtPartyName" type="text" name="PartyName" />
        <br />
        <br />
        <label>Party Acronym: </label>
        <input id="txtPartyAcronym" type="text" name="PartyAcronym" />
        <br />
        <br />
        <label>Party Leader First Name: </label>
        <input id="txtFirstName" type="text" name="FirstName" />
        <br />
        <br />
        <label>Party Leader Last Name: </label>
        <input id="txtLastName" type="text" name="LastName" />
        <br />
        <br />
        <label>Phone Number: </label>
        <input id="txtPhoneNumber" type="text" name="PhoneNumber" />
        <br />
        <br />
        <label>Email Address: </label>
        <input id="txtEmail" type="text" name="Email" />
        <br />
        <br />
        <label>Headquarters Provice: </label>
        <input id="txtProvince" type="text" name="Province" value="This is a placeholder" />
        <br />
        <br />
        <label>Headquarters City/Town: </label>
        <input id="txtCityTown" type="text" name="CityTown" />
        <br />
        <br />
        <label>Headquarter Suburb: </label>
        <input id="txtSuburb" type="text" name="Suburb" />
        <br />
        <br />
        <label>Headquarters Street Address: </label>
        <input id="txtStreetAddress" type="text" name="StreetAddress" />
        <br />
        <br />
        <label>Website: </label>
        <input id="txtWebsite" type="text" name="Website" />
        <br />
        <br />
        <input id="BtnUpdateParty" type="submit" value="Next" />
        }
        @using (Html.BeginForm("StaffHomePage", "Staff"))
        {
            <input id="BtnCancel" type="submit" value="Cancel"/>
        }
    </div>
</body>
</html>
