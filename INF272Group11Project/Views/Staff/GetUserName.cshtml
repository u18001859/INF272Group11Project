@model INF272Group11Project.ViewModels.StaffViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StaffLogin</title>
    <link rel="stylesheet" type="text/css" href="~/Content/INF272Project.css" />
</head>
<body>
    <img id="Logo" src="~/kisscc0-voting-computer-icons-election-logo-button-vote-icon-5b72245f890da6.8607747415342070715614.png" alt="Logo" />
    <h1 class="PageHeading">Voting Made Easy!</h1>
    <label class="Slogan">The simple and better way to vote</label>
    <ul class="NavigationBar">
        <li class="BarList"><a class="OnPage" href="@Url.Action("Index","Voter", new { StaffGUID = Model.StaffView.staff.GUID })">Home</a></li>
        <li class="BarList"><a href="@Url.Action("RegisterVoter", "Voter",  new { StaffGUID = Model.StaffView.staff.GUID, id = Model.StaffView.staff.StaffID })">Register To Vote</a></li>
        <li class="BarList"><a href="@Url.Action("VoterLogin", "Voter", new { StaffGUID = Model.StaffView.staff.GUID, id = Model.StaffView.staff.StaffID })">Voter Login</a></li>
        <li class="BarList"><a href="@Url.Action("FindVotingStation", "Voter", new { StaffGUID = Model.StaffView.staff.GUID, id = Model.StaffView.staff.StaffID })">Find Voting Station</a></li>
        <li class="BarList"><a href="@Url.Action("StaffLogin","Staff")">Staff Login</a></li>
    </ul>
    <h1 class="SecondaryHead">Please Enter Your Username!</h1>
    <h1 class="SecondaryHead" style="color: red">@ViewBag.message</h1>
    <div class="Container">
        @using (Html.BeginForm("ForgotPassword", "Staff", FormMethod.Post))
        {
            <br />
            <br />
            <label>Enter Username: </label>
            <input id="txtUserName" type="text" name="UserName" />
            <br />
            <br />
            <input id="BtnLogin" type="submit" value="search" name="Search" />
        }
        @using (Html.BeginForm("Index", "Voter"))
        {
            <input id="BtnCancel" type="submit" value="Cancel" name="Cancel" />
        }
    </div>
