<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/INF272Project.css" />
    <title>AddVotingStation</title>
</head>
<body>
   
        <img id="Logo" src="~/kisscc0-voting-computer-icons-election-logo-button-vote-icon-5b72245f890da6.8607747415342070715614.png" alt="Logo" />
        <h1 class="PageHeading">Voting Made Easy!</h1>
        <label class="Slogan">The simple and better way to vote</label>

        <ul class="NavigationBar">
            <li class="BarList"><a href="@Url.Action("StaffHomePage","Staff")">Home</a></li>
            <li class="BarList"><a href="@Url.Action("RegisterStaff","Staff")">Register Staff</a></li>
            <li class="BarList"><a href="@Url.Action("RegisterParty","Staff")">Register a Party</a></li>
            <li class="BarList"><a href="@Url.Action("Logout","Voter")">Logout</a></li>
        </ul>
        <h1 class="SecondaryHead">Please Search For A Voting Station</h1>
        <div class="Container">
            <br />
            <br />
            <label>Enter Voting Station Name: </label>
            <input type="text" name="VotingStationName"/>
            <br />
            <br />
            <label>Enter Street Address: </label>
            <input type="text" name="StreetAddress"/>
            <br />
            <br />
            <label>Select Province: </label>
            <select id="dropdowntipo">
                <option value="Province1">Province1</option>
                <option value="Province2">Province2</option>
                <option value="Province3">Province3</option>
            </select>
            <br />
            <br />
            <label>Select Town/City: </label>
            <select id="dropdowntipo">
                <option value="City/Town1">City/Town1</option>
                <option value="City/Town2">City/Town2</option>
                <option value="City/Town3">City/Town3</option>
            </select>
            <br />
            <br />
            <label>Select Suburb: </label>
            <select id="dropdowntipo">
                <option value="Suburb1">Suburb1</option>
                <option value="Suburb2">Suburb2</option>
                <option value="Suburb3">Suburb3</option>
            </select>
            <br />
            <br />
            <input id="BtnSearch" type="submit"value="Search" name="Search"/>
        </div>
    <br />
    <br />

    <table>
        <tr>
            <th>Voting Station Name:</th>
            <th>Province:</th>
            <th>City/Town:</th>
            <th>Suburb:</th>
            <th>Street Address:</th>
            <th>longitude:</th>
            <th>Latitude:</th>
            <th>Opening Time:</th>
            <th>Closing Time:</th>
            <th>Update/Delete:</th>
        </tr>
        <tr>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>PlaceHolder</td>
            <td>
                @using (Html.BeginForm("UpdateVotingStation", "VotingStation"))
                {
                <input id="BtnUpdate" type="submit" value="Update" name="Update"/>
                }
                @using (Html.BeginForm("StaffHomePage", "Staff"))
                {
                    <input id="BtnDelete" type="submit" value="Delete" name="Delete"/>
                }
            </td>
        </tr>
    </table>
</body>
</html>