
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VoterLogin</title>
    <link rel="stylesheet" href="~/Content/INF272Project.css" type="text/css" />
    
</head>
<body>
    <img id="Logo" src="~/kisscc0-voting-computer-icons-election-logo-button-vote-icon-5b72245f890da6.8607747415342070715614.png" alt="Logo" />
    <h1 class="PageHeading">Voting Made Easy!</h1>
    <label class="Slogan">The simple and better way to vote</label>
    <h1 class="SecondaryHead">Please Enter Your Login Information!</h1>
    <h1 class="SecondaryHead" style="color: red;">@ViewBag.message</h1>
    <h1 class="SecondaryHead" style="color: green;">@ViewBag.success</h1>
    <div class="Container">
        @using (Html.BeginForm("LogVoterIn", "Voter", FormMethod.Post))
        {
            <br />
            <br />
            <label>Enter ID Number: </label>
            <input id="txtIDNumber" type="text" name="IDNumber" />
            <br />
            <br />
            <label>Enter Password: </label>
            <input id="txtPassword" type="password" name="Password" />
            <br />
            <br />
            <a href="@Url.Action("ForgotPasswordGetID","Voter")">Forgot Password?</a>
            <br />
            <input id="BtnLogin" type="submit" value="Login" name="Login" />
        }
        @using (Html.BeginForm("Index", "Voter"))
        {
            <input id="BtnCancelVoter" type="submit" value="Cancel" name="Cancel" />
        }
        


    </div>

    
</body>
</html>
