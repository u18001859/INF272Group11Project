
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterVoter</title>
    <link rel="stylesheet" href="~/Content/INF272Project.css" type="text/css" />
</head>
<body>
    <img id="Logo" src="~/kisscc0-voting-computer-icons-election-logo-button-vote-icon-5b72245f890da6.8607747415342070715614.png" alt="Logo" />
    <h1 class="PageHeading">Voting Made Easy!</h1>
    <label class="Slogan">The simple and better way to vote</label>
    <br />
    <ul class="NavigationBar">
        <li class="BarList"><a class="OnPage" href="@Url.Action("Index","Voter")">Home</a></li>
        <li class="BarList"><a href="@Url.Action("RegisterVoter", "Voter")">Register To Vote</a></li>
        <li class="BarList"><a href="@Url.Action("VoterLogin", "Voter")">Voter Login</a></li>
        <li class="BarList"><a href="@Url.Action("FindVotingStation", "Voter")">Find Voting Station</a></li>
        <li class="BarList"><a href="@Url.Action("StaffLogin","Staff")">Staff Login</a></li>
    </ul>
    <h1 class="SecondaryHead">Please Enter your details below and click "Register".</h1>
    <div class="Container">
        @using (Html.BeginForm("AddNewVoter", "Voter"))
        {
            <br />
            <label>ID Number: </label>
            <input id="txtVoterIDNumber" type="text" name="VoterIDNumber" />
            <br />
            <br />
            <label>First Names: </label>
            <input id="txtFirstName" type="text" name="FirstName" />
            <br />
            <br />
            <label>Last Name: </label>
            <input id="txtLastName" type="text" name="LastName" />
            <br />
            <br />
            <label>Email Address: </label>
            <input id="txtEmail" type="text" name="Emailz" />
            <br />
            <br />
            <label>Phone Number: </label>
            <input id="txtPhoneNumber" type="text" name="PhoneNumber" />
            <br />
            <br />
            <label>Select Province: </label>
            <select id="dropdowntipo">
                <option value="Province1">Province1</option>
                <option value="Province2">Province2</option>
                <option value="Province3">Province3</option>
            </select>
            <br />
            <br />
            <label>Select City/Town: </label>
            <select id="dropdowntipo">
                <option value="City/Town1">City/Town1</option>
                <option value="City/Town2">City/Town2</option>
                <option value="City/Town3">City/Town3</option>
            </select>
            <br />
            <br />
            <label>Select Suburb: </label>
            <select id="dropdowntipo">
                <option value="Suburb1">Suburb1</option>
                <option value="Suburb2">Suburb2</option>
                <option value="Suburb3">Suburb3</option>
            </select>
            <br />
            <br />
            <label>Street Address: </label>
            <input id="txtAddress" type="text" name="Address" />
            <br />
            <br />
            <label>Password: </label>
            <input id="txtPassword" type="password" name="Password" />
            <br />
            <br />
            <label>Confirm Password: </label>
            <input id="txtConfrimPassword" type="password" name="ConfrimPassword" />
            <br />
            <br />
            <label>Select Security Question: </label>
            <select id="dropdowntipo">
                <option value="Question1">Question1</option>
                <option value="Question2">Question2</option>
                <option value="Question3">Question3</option>
            </select>
            <br />
            <br />
            <label>Security Question: </label>
            <input id="txtSecurityQuestionAnswer" type="text" name="SecurityAnswer" />
            <br />
            <br />
            <input id="BtnRegisterVoter" type="submit" value="Register" />
        }
        @using (Html.BeginForm("Index", "Voter"))
        {
            <input id="BtnCancelVoter" type="submit" value="Cancel" />
        }
    </div>
</body>
</html>
