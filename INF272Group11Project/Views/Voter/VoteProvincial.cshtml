@model INF272Group11Project.ViewModels.VotingViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VoteProvincial</title>
    <link rel="stylesheet" href="~/Content/INF272Project.css" type="text/css" />
</head>
<body>
    <img id="Logo" src="~/kisscc0-voting-computer-icons-election-logo-button-vote-icon-5b72245f890da6.8607747415342070715614.png" alt="Logo" />
    <h1 class="PageHeading">Voter Home Page!</h1>
    <label class="Slogan">The simple and better way to vote</label>
    <h1 class="SecondaryHead">Vote for Provincial Government By Clicking The Vote Button!</h1>
    
    <table>
        <tr>
            <th>Party Name:</th>
            <th>Party Acronym:</th>
            <th>Candidate Name:</th>
            <th>Party Image:</th>
            <th>Vote:</th>
        </tr>
        @foreach (var item in Model.listcandidate)
        {


        <tr>
            <td>@item.Party.PartyName</td>
            <td>@item.Party.PartyAccronym</td>
            <td>@item.CandidateFirstNames @item.CandidateLastName</td>
            <td>Add Party Picture</td>
            <td>
                @using (Html.BeginForm("doVoteProvincial", "Voter", FormMethod.Post, new { VoterGUID = Model.voterView.voter.GUID, id = Model.voterView.voter.VoterID, PartyID = item.Party.PartyID, provinceID = item.ProvinceID}))
                {
                    <input id="BtnVote" type="submit" value="Vote"/>
                }
            </td>
        </tr>
        }
    </table>
</body>
</html>
