            <br />
            <br />
            <input type="submit" name="submitButton" id="btnUpdate" value="Update" />
            @:&nbsp;
            @:&nbsp;
            @:&nbsp;
            @:&nbsp;
            @:&nbsp;
            @:&nbsp;
            @:&nbsp;
            @:&nbsp;
            <input type="submit" name="submitButton" id="btnBack" value="Back" />
        }

        <br />
        <label>@TempData["message"]</label>
        <label>@TempData["success"]</label>
    </div>
</body>
</html>
