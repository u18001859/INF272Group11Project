    </ul>
    <h1 class="SecondaryHead">Add Candidate Position</h1>
    <div class="Container">
        @using (Html.BeginForm("Create", "Candidate"))
        {
            @Html.AntiForgeryToken()



            <lable>Position Name:</lable>

            @:&nbsp;

            @Html.EditorFor(model => model.CandidatePosition_Description, new { htmlAttributes = new { @class = "form-control" } })


            <br />
            <br />

            <input type="submit" value="Create" class="btn btn-default" />

        }
    </div>
</body>
</html>
